@model MDS.Models.Tara

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3>@Model.Nume</h3>
    </div>
    <div class="card-body">
        <h4>Lista Hoteluri</h4>
        <hr />
        <ul>
            @foreach (var hotel in Model.ListaHoteluri)
            {
                <li>@hotel.Nume</li>
                <a href="/Hoteluri/Show/@hotel.Id" class="btn btn-primary">Detalii</a>

            }
        </ul>
    </div>
</div>
