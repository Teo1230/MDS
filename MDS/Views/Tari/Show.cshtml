@model MDS.Models.Tara

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3 class="fw-bold">@Model.Nume</h3>
    </div>
    <div class="card-body">
        <h4 class="fw-bold mb-3">Lista Hoteluri</h4>
        <hr class="my-4">
        <ul class="list-group list-group-flush">
            @foreach (var hotel in Model.ListaHoteluri)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @hotel.Nume
                    <a href="/Hoteluri/Show/@hotel.Id" class="btn btn-outline-primary">Detalii</a>
                </li>
            }
        </ul>
    </div>
</div>

