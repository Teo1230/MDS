@model MDS.Models.Camera

<div class="card">


    <div class="card-body">

    <h3 class="card-title alert-success py-3 px-3 rounded-2">@Model.Nume</h3>

    <div class="card-text">@Html.Raw(Model.Descriere)</div>
     <div class="card-text">@Model.Capacitate</div
         <div class="card-text">@Model.PretNoapte</div>
    <div class="d-flex justify-content-between flex-row mt-5">

    <div><i class="bi bi-globe"></i> @Model.Hotel.Nume</div>

    </div>
    <div>

                    <a class="btn btn-outline-primary" href="/Camere/Edit/@Model.Id"><i class="bi bi-pencil-square"></i>Editeaza</a>

                </div>

                <div>

                    <form method="post" action="/Camere/Delete/@Model.Id">

                        <button class="btn btn-outline-danger" type="submit"><i class="bi bi-trash"></i>Sterge</button>

                    </form>

                </div>

    </div>
</div>